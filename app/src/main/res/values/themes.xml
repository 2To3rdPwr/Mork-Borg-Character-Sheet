<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MorkBorgCharacterSheet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mb_yellow</item>
        <item name="colorPrimaryVariant">@color/mb_darker_yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mb_pink</item>
        <item name="colorSecondaryVariant">@color/mb_lighter_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mb_darker_yellow</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MorkBorgCharacterSheet.DialogBox" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mb_pink</item>
        <item name="android:textColor">@color/mb_pink</item>
        <item name="android:fontFamily">@font/cut_the_crap</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/cut_the_crap</item>
    </style>
</resources>