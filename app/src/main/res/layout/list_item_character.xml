<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="character"
            type="com.example.morkborgcharactersheet.database.ListedCharacter" />

        <variable
            name="clickListener"
            type="com.example.morkborgcharactersheet.selectcharacter.CharacterSelectListener" />

        <variable
            name="buttonTypeEnum"
            type="com.example.morkborgcharactersheet.selectcharacter.CharacterSelectListener.CharacterSelectButton" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_character_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/the_dark"
            android:textSize="24sp"
            android:text="@{character.name}"
            android:onClick="@{() -> clickListener.onClick(character.characterId, buttonTypeEnum.SELECT)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/list_item_character_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tommy Topplebottom" />

        <ImageView
            android:id="@+id/list_item_character_delete"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{() -> clickListener.onClick(character.characterId, buttonTypeEnum.DELETE)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/close" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>